{
    "name": "theofidry/sfcontext-bundle",
    "type": "symfony-bundle",
    "description": "A context to access statically to the symfony container.",
    "keywords": ["facade", "debug", "symfony"],
    "license": "MIT",
    "authors": [
        {
            "name": "Th√©o FIDRY",
            "email": "theo.fidry@gmail.com",
            "homepage": "https://github.com/theofidry"
        }
    ],
    "require": {
        "symfony/framework-bundle": "^3.4 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "symfony/yaml": "^3.4 || ^4.0"
    },
    "autoload": {
        "psr-4": { "Fidry\\SfContextBundle\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Fidry\\SfContextBundle\\": "tests" }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    }
}
